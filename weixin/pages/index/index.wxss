view{
  font-family:microsoft yahei;
}

/* 中间温度显示区域 */
.main-box{
  width:100%;
  height:600rpx;
  background:deepskyblue;
}
/* 温度 */
.temperature{
  width:500rpx;
  height:auto;
  font-family: Arial;
  font-size:100px;
  color:#fff;
  /*border:1px solid #fff;*/
  padding-top:100rpx;
}
.quality{
  width:100%;
  height:60rpx;
  line-height:60rpx;
  overflow:hidden;
  margin:5rpx;
}
.quality-icon{
  width:50rpx;
  height:50rpx;
  /*border:1px solid #234233;*/
  float:left;
}
.shuye{
  background:url("../../images/sy.png") no-repeat center center/cover;
}
.shidu{
  background:url("../../images/sd.png") no-repeat center center/cover;
}
.fengli{
  background:url("../../images/fj.png") no-repeat center center/cover;
}
.quality text{
  float:left;
  color:#fff;
  font-size:30rpx;
  margin-left:10rpx;
}
/* 近三天的天气情况 */
.lately{
  width:100%;
  height:286rpx;
  background:rgba(0,0,0,0.2);
  color:#fff;
  border-top:3px solid #fff;
  padding-top:10rpx;
}
.today{
  width:30%;
  height:280rpx;
  text-align:center;
  /*background:#239323;*/
  border:1px solid #fff;
  padding:0 1rpx;
  float:left;
}
.line{
  width:3rpx;
  height:250rpx;
  background:#fff;
  float:left;
  margin:15rpx 10rpx;
}
/* 中间温度区间 */
.middle{
  width:80%;
  height:180rpx;
  background:#ccc;
  margin:0 auto;
  display:flex;
}
.middle .tq{
  width:50%;
  height:100%;
  background:#fff;
}
.tq-icon{
  width:80rpx;
  height:80rpx;
  background:url("../../images/qing.png") center center no-repeat/cover;
  margin:50rpx auto;
}
.tq-num view{
  width:100%;
  height:100%;
  box-sizing:border-box;
  font-size:30rpx;
  padding:44rpx 12rpx;
}
/* 一周之内的天气情况 */
.week-weather{
  width:100%;
  height:auto;
  background:#ccc;
  padding-top:10rpx;
}
/* 多天预报 */
.title{
  width:100%;
  height:60rpx;
  color:#fff;
}
.title-text{
  float:left;
}
.title-line{
  width:70%;
  height:3rpx;
  background:#fff;
  margin:29rpx 12rpx;
  float:left;
}

.seven{
  width:100%;
  height:200rpx;
  background:#fff;
  display:flex;
}
.sunday{
  width:160rpx;
  height:100%;
  text-align:center;
  font-size:30rpx;
  margin:0 10rpx;
  background:lime;
}
.fine{
  width:40rpx;
  height:40rpx;
  margin:10rpx auto;
  background:yellow;
}
/* 天气曲线图 */
.curve-box{
  width:100%;
  height:200rpx;
  margin:20rpx 0;
}
.curve{
  width:100%;
  height:100rpx;
  background:#fff;
}

/* 生活指数 */
.left{
  width:100%;
  height:400rpx;
  margin:20rpx 0;
  background:darkorange;
}

.left-box{
  width:100%;
  height:auto;
  padding:10rpx;
  overflow:hidden;
  background:#fff;
  box-sizing:border-box;
}
.left-item{
  box-sizing:border-box;
  width:46%;
  height:120rpx;
  background:#232333;
  border-top:1px solid #fff;
  border-right:1px solid #fff;
  padding:0 15rpx;
  margin:10rpx;
  float:left;
}
.left-icon{
  width:40%;
  height:100rpx;
  float:left;
  outline:1px solid #eee;
  margin-top:10rpx;
}
.left-right{
  width:60%;
  height:100%;
  float:left;
}
.lr-top{
  float:right;
  width:100%;
  height:60rpx;
  font-size:30rpx;
  color:#fff;
  opacity:0.9;
  text-align:right;
  line-height:80rpx;
}
.lr-bottom{
  float:right;
  color:#fff;
}